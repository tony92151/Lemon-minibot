		<param name="pub_tf" value="false"/>
	</group>
	<group unless="$(arg only_use_rf2o)">
		<node pkg="lemon_minibot" name="keyboard_teleop" type="keyboard_teleop.py" output="screen"/>
	</group> -->
	<node pkg="tf" type="static_transform_publisher" name="base_footprint2base_link" args=" 0 0 0.05 0 0 0 /base_footprint /base_link 20"/>
    <node pkg="tf" type="static_transform_publisher" name="base_link2laser_link"     args="-0.02 0 0.5 0 0 0 /base_link /laser_link 20"/>
    <node pkg="tf" type="static_transform_publisher" name="tag_trans" args=" 0.5 0 0 0 1.57 1.57 /odom /usb_cam 20"/>

</launch>
